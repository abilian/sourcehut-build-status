{
  "manifest_version": 2,
  "name": "RSS Feed Alert",
  "description": "Monitors an RSS feed and alerts on specific keywords.",
  "version": "1.0",
  "permissions": [
    "alarms",
    "notifications",
    "storage",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon-48px.png"
    }
  },
  "icons": {
    "48": "icon.png"
  }
}
