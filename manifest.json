{
  "manifest_version": 2,
  "name": "Sourcehut CI Monitor",
  "description": "Monitors Sourcehut CI and fire notifications when a build fails.",
  "version": "1.0",
  "permissions": ["alarms", "notifications", "storage", "https://*/*", "http://*/*"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon-48px.png",
      "96": "icon-96px.png"
    }
  },
  "icons": {
    "48": "icon-48px.png",
    "96": "icon-96px.png"
  }
}
